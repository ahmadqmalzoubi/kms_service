# KMS Service Configuration

# Application settings
PROJECT_NAME=KMS Service
VERSION=1.0.0
DEBUG=false

# Server settings
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Backend KMS settings
KMS_BACKEND_URL=http://localhost:9000
KMS_BACKEND_TIMEOUT=30
KMS_BACKEND_RETRIES=3

# Security settings
API_KEY=your-super-secret-api-key-change-this-in-production
CORS_ORIGINS=*
RATE_LIMIT_PER_MINUTE=100

# Logging settings
LOG_LEVEL=INFO
LOG_FORMAT=json

# Database settings (for future use)
# DATABASE_URL=postgresql://user:password@localhost/kms

# Redis settings (for caching and rate limiting)
# REDIS_URL=redis://localhost:6379

# Monitoring settings
ENABLE_METRICS=true
METRICS_PORT=9090

# Health check settings
HEALTH_CHECK_INTERVAL=30 